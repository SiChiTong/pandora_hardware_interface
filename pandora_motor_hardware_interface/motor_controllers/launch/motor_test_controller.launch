<launch>
  <arg name="robot" default="woody" />
  <arg name="namespace" default="motor" />

  <!-- load configuration -->
  <rosparam
    command="load"
    file="$(find pandora_motor_hardware_interface)/motor_controllers/config/joint_state_controller.yaml"
    ns="$(arg namespace)"/>

  <rosparam
    command="load"
    file="$(find pandora_motor_hardware_interface)/motor_controllers/config/skid_steer_new_controller.yaml"
    ns="$(arg namespace)"/>

  <param
    name="robot_description"
    command="$(find xacro)/xacro.py '$(find pandora_robots_description)/urdf/$(arg robot)/bringup.urdf.xacro'"/>

  <!-- spawn controller -->
  <node
    name="motor_controller_spawner"
    pkg="controller_manager"
    type="controller_manager" output="screen"
    ns="$(arg namespace)"
    args="
      spawn
      joint_state_controller
      skid_steer_test_controller" />
</launch>
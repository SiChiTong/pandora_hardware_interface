                            src/common/chirp.cpp)


set(BOOST_LIBRARIES
	#/home/petros/boost_1_49_0/lib/libboost_chrono.so.1.49.0
	/home/petros/boost_1_49_0/lib/libboost_system.so.1.49.0
        /home/petros/boost_1_49_0/lib/libboost_thread.so.1.49.0
)


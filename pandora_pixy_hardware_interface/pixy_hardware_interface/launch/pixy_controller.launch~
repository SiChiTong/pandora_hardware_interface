<launch>
  <!-- load configuration -->
  <rosparam
    command="load"
    file="$(find pandora_pixy_hardware_interface)/pixy_hardware_interface/config/pixy_hardware_interface.yaml"
    ns="/pixy"/>

  <!-- spawn controller -->
  <node
    name="pixy_controller_spawner"
    pkg="controller_manager"
    type="controller_manager" output="screen"
    ns="/pixy"
    args="
      spawn
      joint_state_controller
      pixy_pitch_controller
      pixy_yaw_controller">
    <remap
      from="/pixy/pixy_pan_controller/command"
      to="/pixy_pitch_controller/command"/>
    <remap
      from="/pixy/pixy_yaw_controller/command"
      to="/pixy_yaw_controller/command"/>
  </node>
</launch>

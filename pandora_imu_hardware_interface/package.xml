<?xml version="1.0"?>
<package format="2">
  <name>pandora_imu_hardware_interface</name>
  <version>0.0.0</version>
  <description>Contains pandora imu hardware interface.</description>

  <maintainer email="gkourosg@yahoo.gr">George Kouros</maintainer>

  <license>BSD</license>

  <url type="bugtracker">https://github.com/pandora-auth-ros-pkg/pandora_hardware_interface/issues</url>
  <url type="repository">https://github.com/pandora-auth-ros-pkg/pandora_hardware_interface</url>

  <author>Chris Zalidis</author>  
  <author>Evangelos Apostolidis</author>
  <author>George Kouros</author>

  <buildtool_depend>catkin</buildtool_depend>
  
  <build_depend>roslint</build_depend>

  <depend>roscpp</depend>
  <depend>tf</depend>
  <depend>controller_manager</depend>
  <depend>controller_interface</depend>
  <depend>pandora_sensor_msgs</depend>
  <depend>serial</depend>
  <depend>pluginlib</depend>

  <exec_depend>ros_controllers</exec_depend>

  <export>
    <controller_interface plugin="${prefix}/imu_rpy_controller.xml"/>
  </export>
</package>
